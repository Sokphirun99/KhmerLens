                                "value": "Bearer {{id_token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"fields\": {\n    \"title\": {\"stringValue\": \"Sample Product\"},\n    \"subtitle\": {\"stringValue\": \"Brand Name\"},\n    \"description\": {\"stringValue\": \"Product description goes here.\"},\n    \"imageUrl\": {\"stringValue\": \"https://example.com/image.jpg\"},\n    \"source\": {\"stringValue\": \"Postman API\"},\n    \"scanCount\": {\"integerValue\": \"1\"},\n    \"createdAt\": {\"timestampValue\": \"2023-10-27T10:00:00Z\"}\n  }\n}"
                        },
