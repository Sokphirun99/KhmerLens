    "item": [
        {
            "name": "1. Authentication (Web API Key)",
            "item": [
                {
                    "name": "Sign In Anonymously",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.idToken) {",
                                    "    pm.collectionVariables.set(\"id_token\", jsonData.idToken);",
                                    "    console.log(\"ID Token set successfully\");",
                                    "}",
                                    "else {",
                                    "    console.error(\"Failed to get ID Token\", jsonData);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"returnSecureToken\": true\n}"
                        },
                        "url": {
                            "raw": "https://identitytoolkit.googleapis.com/v1/accounts:signUp?key={{firebase_web_api_key}}",
                            "protocol": "https",
                            "host": [
                                "identitytoolkit",
                                "googleapis",
                                "com"
                            ],
                            "path": [
                                "v1",
                                "accounts:signUp"
                            ],
                            "query": [
                                {
                                    "key": "key",
                                    "value": "{{firebase_web_api_key}}",
                                    "description": "Your Firebase Web API Key"
                                }
                            ]
                        },
                        "description": "Signs in anonymously to get an idToken for authenticated requests."
                    },
                    "response": []
                }
            ],
            "description": "Use these requests first to generate an `id_token`."
        },
