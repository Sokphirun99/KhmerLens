                            "protocol": "https",
                            "host": [
                                "firestore",
                                "googleapis",
                                "com"
                            ],
                            "path": [
                                "v1",
                                "projects",
                                "{{firebase_project_id}}",
                                "databases",
                                "(default)",
                                "documents",
                                "products",
                                "{{product_id}}"
                            ]
                        },
                        "description": "Creates or updates a product document. Requires valid ID Token."
                    },
                    "response": []
